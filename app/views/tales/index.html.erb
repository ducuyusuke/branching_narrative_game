
<div class="container mt-5">

<div class="row">
  <div class="col-12">
  <%= link_to "New Story",  new_tale_path, class:"btn btn-danger"%>
  </div>
</div>


<div class="row mt-5">
  <div class="col-12">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
      <th>Story</th>
      <th>Description</th>
      <th></th>
      <th></th>
      </tr>
    </thead>
    <tbody>

  <% @tales.each do |tale| %>
      <tr>
        <th><%= link_to tale.name, scene_path(1) %></th>
        <td><%= tale.description.truncate(50) %></td>
        <td><%=link_to "Edit Description", edit_tale_path(tale)   %></td>
        <td><%=link_to "Edit Scenes", tale_path(tale)   %></td>
      </tr>
  <% end %>
    </tbody>
  </table>
  </div>
  </div>
</div>
