
<div class="container mt-5">

  <h2><%= @tale.name %></h2>
  <div class="row">
    <div class="col-12">
    <%= link_to "New Scene", new_tale_scene_path(@tale), class: "btn btn-danger" %>
    </div>
  </div>

  <table class="table table-striped table-hover mt-5">
    <thead>
      <tr>
      <th>Scene</th>
      <th>Contents</th>
      <th></th>
      <th></th>
      </tr>
    </thead>
    <tbody>

  <% @scenes.each do |scene| %>
      <tr>
        <th><%= link_to scene.id, scene_path(scene) %></th>
        <td><%= scene.story.truncate(70) %></td>
        <td><%= link_to "Edit", edit_scene_path(scene) %></td>
        <td><%= link_to "Delete", scene_path(scene), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end %>
    </tbody>
  </table>
  </div>
