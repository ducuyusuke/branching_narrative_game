<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h3>Edit your story</h3>
      <%= simple_form_for @tale do |f| %>
        <%= f.input :name, placeholder: 'Name of new story' %>
        <%= f.input :description, placeholder: 'Description', :as => :text, :input_html => { :rows => 7 } %>
        <%= f.submit class: 'btn btn-danger'%>
      <% end %>
    </div>
  </div>
</div>
